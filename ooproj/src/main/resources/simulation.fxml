<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="agh.ics.oop.front.presenter.SimulationPresenter">
    <SplitPane dividerPositions="0.5" prefHeight="400.0" prefWidth="600.0">
        <VBox>
            <GridPane fx:id="mapGrid" gridLinesVisible="true" />
        </VBox>
        <AnchorPane fx:id="statsPane" prefHeight="398.0" prefWidth="276.0">
            <Button onAction="#stopSim" layoutX="72.0" layoutY="14.0" mnemonicParsing="false" text="STOP"/>
            <Button onAction="#startSim" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" text="START"/>
        </AnchorPane>

    </SplitPane>
</AnchorPane>
